import javax.swing.*; import java.awt.*; import java.awt.event.*;
public class tictactoe extends JFrame {
private static final String TITEL="Tic Tac Toe"; private static final int WEITE=450;
private static final int HOEHE=450;
private Container content;
private JLabel ergebnis;
private JButton[] kasten;
private JButton endKnopf;
private JButton startKnopf;
private KastenKnopfHandler[] kastenHandlers; private EndKnopfHandler endHandler;
private StartKnopfHandler startHandler; private int unentschieden=1;
private boolean kreis; private boolean spielVorbei;
public tictactoe() {
//benötigten Code initzialisieren setTitle(TITEL);
setSize(WEITE, HOEHE); setDefaultCloseOperation(EXIT_ON_CLOSE);
//get Inhaltskasten content=getContentPane(); content.setBackground(Color.red.darker());
//Layout setzen
content.setLayout(new GridLayout(4,3));
//Kästen und Handler erschaffen
kasten=new JButton[9];
kastenHandlers=new KastenKnopfHandler[9]; for(int i=0; i<9; i++)
{
}
char ch=(char)('0'+i+1);
kasten[i]=new JButton(""+ch); kastenHandlers[i]=new KastenKnopfHandler(); kasten[i].addActionListener(kastenHandlers[i]);
//start und end Knöpfe erschaffen endKnopf=new JButton("Ende"); endHandler=new EndKnopfHandler(); endKnopf.addActionListener(endHandler); startKnopf=new JButton("Neu"); startHandler=new StartKnopfHandler(); startKnopf.addActionListener(startHandler);
//ergebnis Feld erschaffen
ergebnis=new JLabel("Kreis", SwingConstants.CENTER); ergebnis.setForeground(Color.white);
//Elemente zum Spielgitter hinzufügen for(int i=0; i<9; i++)
{
}
content.add(kasten[i]); //kasten[i].setBackground(Color.black); //kasten[i].setForeground(Color.white);
content.add(startKnopf); //startKnopf.setBackground(Color.black); //startKnopf.setForeground(Color.white); content.add(ergebnis); content.add(endKnopf); //endKnopf.setBackground(Color.black); //endKnopf.setForeground(Color.white);
//Initialisiere start();
}
public void start() {
//Boolvariablen einen Wert zuweisen kreis=true;
spielVorbei=false;
unentschieden=1;
//Text in den Knopfen erschaffen for(int i=0; i<9; i++)
{
char ch=(char)('0'+i+1); kasten[i].setText(""+ch);
}
//Ergebnis Feld Text setzen ergebnis.setText("Kreis am Zug");
setVisible(true);
}
public boolean siegerTest() {
//Überprüfen ob jemand gewonnen hat
if(kasten[0].getText().equals(kasten[1].getText()) && kasten[1].getText().equals(kasten[2].getText())) {
return true; }
else if(kasten[3].getText().equals(kasten[4].getText()) && kasten[4].getText().equals(kasten[5].getText())) {
return true; }
else if(kasten[6].getText().equals(kasten[7].getText()) && kasten[7].getText().equals(kasten[8].getText())) {
return true; }
else if(kasten[0].getText().equals(kasten[3].getText()) && kasten[3].getText().equals(kasten[6].getText())) {
return true; }
else if(kasten[1].getText().equals(kasten[4].getText()) && kasten[4].getText().equals(kasten[7].getText())) {
return true; }
else if(kasten[2].getText().equals(kasten[5].getText()) && kasten[5].getText().equals(kasten[8].getText())) {
return true; }
else if(kasten[0].getText().equals(kasten[4].getText()) && kasten[4].getText().equals(kasten[8].getText())) {
return true; }
else if(kasten[2].getText().equals(kasten[4].getText()) && kasten[4].getText().equals(kasten[6].getText())) {
return true; }
else {
return false; }
}
public static void main(String[] args) {
//tictactoe Obejkt erstellen tictactoe gui=new tictactoe();
}
