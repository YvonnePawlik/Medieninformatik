private class EndKnopfHandler implements ActionListener {
public void actionPerformed(ActionEvent e) {
System.exit(0);
} }
private class StartKnopfHandler implements ActionListener {
public void actionPerformed(ActionEvent e) {
start();
ergebnis.setText("Kreuz hat gewonnen!");
}
} }
